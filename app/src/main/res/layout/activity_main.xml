<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnClear"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="CLEAR"
        app:layout_constraintEnd_toStartOf="@+id/btnEnter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSugar" />

    <TextView
        android:id="@+id/txtViewDiscnt"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewGrandTotal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtViewGrandTotal"
        app:layout_constraintTop_toBottomOf="@+id/txtViewGrandTotal" />

    <TextView
        android:id="@+id/txtViewNetAmnt"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewDiscnt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtViewDiscnt"
        app:layout_constraintTop_toBottomOf="@+id/txtViewDiscnt" />

    <TextView
        android:id="@+id/txtViewGrandTotal"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnEnter"
        app:layout_constraintStart_toStartOf="@+id/btnEnter"
        app:layout_constraintTop_toBottomOf="@+id/btnEnter" />

    <TextView
        android:id="@+id/txtViewMilkTtl"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTotal"
        app:layout_constraintStart_toStartOf="@+id/txtTotal"
        app:layout_constraintTop_toBottomOf="@+id/txtTotal" />

    <TextView
        android:id="@+id/txtViewMilkPrice"
        android:layout_width="55dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtPrice"
        app:layout_constraintStart_toStartOf="@+id/txtPrice"
        app:layout_constraintTop_toBottomOf="@+id/txtPrice" />

    <TextView
        android:id="@+id/txtViewSugarTtl"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewButterTtl"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtViewButterTtl"
        app:layout_constraintTop_toBottomOf="@+id/txtViewButterTtl" />

    <TextView
        android:id="@+id/txtViewButterTtl"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewBreadTtl"
        app:layout_constraintStart_toStartOf="@+id/txtViewBreadTtl"
        app:layout_constraintTop_toBottomOf="@+id/txtViewBreadTtl" />

    <TextView
        android:id="@+id/txtViewBreadPrice"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewMilkPrice"
        app:layout_constraintTop_toBottomOf="@+id/txtViewMilkPrice" />

    <TextView
        android:id="@+id/txtViewBreadTtl"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewMilkTtl"
        app:layout_constraintStart_toStartOf="@+id/txtViewMilkTtl"
        app:layout_constraintTop_toBottomOf="@+id/txtViewMilkTtl" />

    <TextView
        android:id="@+id/txtViewSugarPrice"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewButterPrice"
        app:layout_constraintStart_toStartOf="@+id/txtViewButterPrice"
        app:layout_constraintTop_toBottomOf="@+id/txtViewButterPrice" />

    <TextView
        android:id="@+id/txtViewQntSugar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewQntButter"
        app:layout_constraintStart_toStartOf="@+id/txtViewQntButter"
        app:layout_constraintTop_toBottomOf="@+id/txtViewQntButter" />

    <TextView
        android:id="@+id/txtViewQntButter"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewQntBread"
        app:layout_constraintStart_toStartOf="@+id/txtViewQntBread"
        app:layout_constraintTop_toBottomOf="@+id/txtViewQntBread" />

    <TextView
        android:id="@+id/txtViewQntBread"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewQntMilk"
        app:layout_constraintStart_toStartOf="@+id/txtViewQntMilk"
        app:layout_constraintTop_toBottomOf="@+id/txtViewQntMilk" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="STAR MART"
        android:textAlignment="center"
        android:textColor="#E61212"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMilk"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="MILK"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtItem" />

    <Button
        android:id="@+id/btnBread"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="BREAD"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMilk" />

    <Button
        android:id="@+id/btnButter"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="BUTTER"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBread" />

    <Button
        android:id="@+id/btnSugar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="SUGAR"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnButter" />

    <TextView
        android:id="@+id/txtItem"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="ITEM"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="QUANTITY"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/txtItem"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:text="PRICE"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/txtTotal"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:text="TOTAL"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:text="ENTER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSugar" />

    <TextView
        android:id="@+id/txtViewGrand"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:text="Grand Total"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnClear"
        app:layout_constraintStart_toStartOf="@+id/btnClear"
        app:layout_constraintTop_toBottomOf="@+id/btnClear" />

    <TextView
        android:id="@+id/txtViewDiscount"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:text="Discount (15%)"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewGrand"
        app:layout_constraintStart_toStartOf="@+id/txtViewGrand"
        app:layout_constraintTop_toBottomOf="@+id/txtViewGrand" />

    <TextView
        android:id="@+id/txtViewNet"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="60dp"
        android:text="Net Amount"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtViewDiscount"
        app:layout_constraintStart_toStartOf="@+id/txtViewDiscount"
        app:layout_constraintTop_toBottomOf="@+id/txtViewDiscount"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtViewQntMilk"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtQuantity"
        app:layout_constraintStart_toStartOf="@+id/txtQuantity"
        app:layout_constraintTop_toBottomOf="@+id/txtQuantity" />

    <TextView
        android:id="@+id/txtViewButterPrice"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtViewBreadPrice"
        app:layout_constraintStart_toStartOf="@+id/txtViewBreadPrice"
        app:layout_constraintTop_toBottomOf="@+id/txtViewBreadPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>